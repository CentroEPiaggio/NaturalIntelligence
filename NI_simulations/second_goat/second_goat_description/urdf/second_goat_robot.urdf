<?xml version='1.0'?>

<!-- Goat Robot Model, using xacro -->

<robot name="goat_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Goat Proprieties -->
  <xacro:property name="base_mass"   value= "10"/>
  <xacro:property name="base_length"   value= "0.25"/>
  <xacro:property name="base_width"   value= "0.4"/>
  <xacro:property name="base_height"   value= "0.06"/>
  <!-- Elastic Proprieties -->
  <xacro:property name="joint_stifness"   value= "10"/>

  <!-- Base -->
  <!-- describes base link, base parameters are editable via xacro proprieties -->
  <xacro:include filename="$(find second_goat_description)/urdf/base/second_goat_base.xacro"/>
    <xacro:base name="base_link" />

  <xacro:include filename="$(find second_goat_description)/urdf/leg/second_goat_leg.xacro"/>

  <!-- Right Foreleg -->
  <xacro:leg leg="RF" />

  <!-- Left Foreleg --> 
  <xacro:leg leg="LF" />

  <!-- Right Hideleg --> 
  <xacro:leg leg="RH" />

  <!-- Left Hideleg --> 
  <xacro:leg leg="LH" /> 

</robot> 